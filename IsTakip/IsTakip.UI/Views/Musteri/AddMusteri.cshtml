@model IsTakip.Entities.Classes.MusteriClasses.Musteri
@{
	ViewData["Title"] = "AddMusteri";
	Layout = "~/Views/Shared/_IsTakipLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Müşteri Kayıt Sayfası</h4>
			<div class="forms-sample">
				@using (Html.BeginForm("AddMusteri", "Musteri", FormMethod.Post))
				{
					<div class="form-group">
						<label for="exampleInputName1"> Müsteri Tanımı </label>
						@Html.TextBoxFor(x=>x.Tanim, new {@class = "form-control"})
					</div>					
					<div class="form-group">
						<label for="exampleInputEmail3"> Adres Bilgisi </label>
						@Html.TextBoxFor(x=>x.Adres, new {@class = "form-control"})
					</div>
					<div class="form-group">
						<label for="exampleInputEmail3"> E-mail </label>
						@Html.TextBoxFor(x=>x.EMail, new {@class = "form-control"})
					</div>
					<div class="form-group">
						<label for="exampleInputEmail3"> Telefon </label>
						@Html.TextBoxFor(x=>x.Telefon, new {@class = "form-control"})
					</div>
					<div class="form-group">
						<label for="exampleInputPassword4">Vergi Dairesi </label>
						@Html.TextAreaFor(x=>x.VergiDairesi, new {@class = "form-control"})
					</div>
					<div class="form-group">
						<label for="exampleInputPassword4">Vergi Dairesi No</label>
						@Html.TextBoxFor(x=>x.VergiDairesiNumarasi, new {@class = "form-control"})
					</div>
					<div class="form-group">
						<label for="exampleInputPassword4"> Açıklama </label>
						@Html.TextAreaFor(x=>x.Aciklama,10,3, new {@class = "form-control"})
					</div>
					<div class="form-group mdi-checkbox-blank-circle">
						<label for="exampleInputPassword4"> Durum </label>
						@Html.CheckBoxFor(x => x.Aktif, new { @class = "checkbox" })
					</div>
					<button class="btn btn-inverse-primary mr-2">Kaydet</button>
					<a href="/Musteri/Index" class="btn btn-inverse-dark">Geri Dön</a>
				}
			</div>
		</div>
	</div>
</div>










