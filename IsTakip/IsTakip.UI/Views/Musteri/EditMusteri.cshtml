@model IsTakip.Entities.Classes.MusteriClasses.Musteri

@{
    ViewData["Title"] = "EditMusteri";
    Layout = "~/Views/Shared/_IsTakipLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Müşteri Düzenleme Sayfası</h4>
			<div class="forms-sample">
                <form asp-action="EditMusteri">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group">
                        <label asp-for="Tanim" class="control-label"></label>
                        <input asp-for="Tanim" class="form-control" />
                        <span asp-validation-for="Tanim" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Adres" class="control-label"></label>
                        <input asp-for="Adres" class="form-control" />
                        <span asp-validation-for="Adres" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EMail" class="control-label"></label>
                        <input asp-for="EMail" class="form-control" />
                        <span asp-validation-for="EMail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefon" class="control-label"></label>
                        <input asp-for="Telefon" class="form-control" />
                        <span asp-validation-for="Telefon" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VergiDairesi" class="control-label"></label>
                        <input asp-for="VergiDairesi" class="form-control" />
                        <span asp-validation-for="VergiDairesi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VergiDairesiNumarasi" class="control-label"></label>
                        <input asp-for="VergiDairesiNumarasi" class="form-control" />
                        <span asp-validation-for="VergiDairesiNumarasi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Aciklama" class="control-label"></label>
                        <input asp-for="Aciklama" class="form-control" />
                        <span asp-validation-for="Aciklama" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Aktif" class="checkbox"></label>
                        <input asp-for="Aktif" class="checkbox" />
                        <span asp-validation-for="Aktif" class="checkbox"></span>
                    </div>
                   

                    <a asp-action="Index" class="btn btn-inverse-secondary"> <i class="fa fa-arrow-left"></i> Listeye Geri Dön </a> |
                    <button type="submit" class="btn btn-inverse-success"> <i class="fa fa-check"></i> Kaydet </button>

                </form>
			</div>
		</div>
	</div>
</div>
